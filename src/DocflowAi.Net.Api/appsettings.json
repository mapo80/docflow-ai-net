{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Api": {
    "HeaderName": "X-API-Key",
    "Keys": [
      "dev-secret-key-change-me"
    ]
  },
  "Services": {
    "Markitdown": {
      "BaseUrl": "http://localhost:8000",
      "TimeoutSeconds": 60,
      "RetryCount": 3
    }
  },
  "LLM": {
    "ModelPath": "/models/qwen3-1_5-instruct-q4_0.gguf",
    "ContextTokens": 4096,
    "Threads": 6,
    "MaxTokens": 512,
    "Temperature": 0.2,
    "ThinkingMode": "auto"
  },
  "ExtractionProfiles": {
    "Active": "default",
    "Profiles": [
      {
        "Name": "default",
        "DocumentType": "generic",
        "Language": "auto",
        "Fields": [
          {
            "Key": "FullName",
            "Description": "Person full name",
            "Type": "string",
            "Required": true
          },
          {
            "Key": "DocumentNumber",
            "Description": "ID or reference number",
            "Type": "string",
            "Required": false
          },
          {
            "Key": "IssueDate",
            "Description": "Date of issue (YYYY-MM-DD)",
            "Type": "date",
            "Required": false
          },
          {
            "Key": "TotalAmount",
            "Description": "Total amount if present",
            "Type": "number",
            "Required": false
          }
        ]
      }
    ]
  }
}