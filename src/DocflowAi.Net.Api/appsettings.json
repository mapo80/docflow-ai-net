{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Hangfire.Console.Extensions.Serilog"
    ],
    "MinimumLevel": "Information",
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithHangfireContext"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Hangfire",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "Api": {
    "HeaderName": "X-API-Key",
    "Keys": [
      "dev-secret-key-change-me"
    ]
  },
  "LLM": {
    "DefaultModelRepo": "unsloth/Qwen3-0.6B-GGUF",
    "DefaultModelFile": "Qwen3-0.6B-Q4_0.gguf",
    "Threads": 6,
    "MaxTokens": 512,
    "Temperature": 0.2,
    "ThinkingMode": "auto",
    "UseGrammar": true
  },
  "BBox": {
    "DistanceAlgorithm": "BitParallel",
    "EditDistanceThreshold": 0.25,
    "MaxCandidates": 10,
    "EnableLabelProximity": true
  },
  "Resolver": {
    "Strategy": "Auto",
    "Order": [ "Pointer", "TokenFirst", "Legacy" ],
    "TokenFirst": {
      "DistanceAlgorithm": "BitParallel",
      "EditDistanceThreshold": 0.25,
      "AdaptiveShortMax": 0.40,
      "AdaptiveLongMax": 0.35,
      "MaxCandidates": 10,
      "EnableLabelProximity": true
    },
    "Pointer": {
      "Mode": "WordIds",
      "Strict": true,
      "MaxGapBetweenIds": 1,
      "IncludeIndexMapInPrompt": true,
      "MaxPointerTokensInPrompt": 20000,
      "WordIdFormat": "W{Page}_{Index}",
      "ConfidenceWhenStrict": 1.0
    }
  },
  "JobQueue": {
    "DataRoot": "./data/jobs",
    "Database": { "Provider": "sqlite", "ConnectionString": "Data Source=./data/app.db" },
    "Queue": { "MaxQueueLength": 100, "LeaseWindowSeconds": 120, "MaxAttempts": 5 },
    "Concurrency": { "MaxParallelHeavyJobs": 1, "HangfireWorkerCount": 2 },
    "Timeouts": { "JobTimeoutSeconds": 900 },
    "RateLimit": {
      "General": { "PermitPerWindow": 50, "WindowSeconds": 10, "QueueLimit": 0 },
      "Submit":  { "PermitPerWindow": 10, "WindowSeconds": 10, "QueueLimit": 0 }
    },
    "UploadLimits": { "MaxRequestBodyMB": 20 },
    "JobTTLDays": 14,
    "EnableHangfireDashboard": true,
    "SeedDefaults": true,
    "Immediate": { "Enabled": true, "MaxParallel": 1, "TimeoutSeconds": 50, "FallbackToQueue": true },
    "Cleanup": { "Enabled": true, "DailyHour": 3, "DailyMinute": 15 }
  },
  "ModelDownload": {
    "LogDirectory": "./data/model-logs",
    "ModelDirectory": "./data/models"
  }
}
